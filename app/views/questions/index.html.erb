<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        
       
       <img src="<%= '/' + @quiz.image %>" style="width: 300px;" />
       <%= form_tag(question_answers_path(@quiz)) do %>
       <div class="form-group">
         <%= text_field_tag :answer, nil, class: 'form-control input-lg', placeholder: "かいとう" %>
         <%= hidden_field_tag :quiz_id, @quiz.id %>
       </div>
       <div class="form-group">
         <%= submit_tag 'そうしん', class: 'btn btn-warning btn-send' %>
       </div>
       <% end %>
       <div class="form-group">
         <%= link_to 'どうぶつ', animal_questions_path, class: 'btn btn-success btn-lg' %>
         <%= link_to 'たべもの', food_questions_path, class: 'btn btn-success btn-lg' %>
         <%= link_to 'のりもの', vehicle_questions_path, class: 'btn btn-success btn-lg' %>
       
        </div>
　　　</div>
    </div>
  </div>
<% end %>

